<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TB_ListAct">

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="833dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="linear">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="183dp"
            android:layout_height="217dp"
            tools:src="@tools:sample/avatars"
            android:contentDescription="image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:orientation="vertical"
            android:contentDescription="linear">

            <TextView
                android:id="@+id/TB_txtview_urunadi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ürün İsim"
                android:textAlignment="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="20sp"
                android:contentDescription="urun adi"/>

            <TextView
                android:id="@+id/TB_txtview_urunfiyat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ürün Fiyat"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                android:contentDescription="urun fiyat"/>

            <TextView
                android:id="@+id/TB_txtview_urunaciklama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ürün Açıklama"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/TB_buttonsiparis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sipariş Ver"
                android:textColor="@android:color/holo_red_dark"
                android:contentDescription="siparis buton"/>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>